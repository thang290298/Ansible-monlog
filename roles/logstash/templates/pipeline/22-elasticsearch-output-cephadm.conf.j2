output {
  if "ceph" in [tags] {
    elasticsearch {
      hosts => ["https://{{ IP_Public }}:{{ ES_PORT }}"]
      user => "{{ elastic_user }}"
      password => "{{ elastic_password }}"
      ssl => true
      ssl_certificate_verification => false
      cacert => "/usr/share/logstash/config/certs/ca/ca.crt"
      index => "ceph-%{+YYYY.MM.dd}"
    }
  }
    stdout { codec => rubydebug }
}